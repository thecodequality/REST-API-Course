import static io.restassured.RestAssured.given;
import static org.hamcrest.Matchers.equalTo;

import org.testng.Assert;

import files.payloadData;
import files.reUsableMethods;
import io.restassured.RestAssured;
import io.restassured.path.json.JsonPath;

public class addPlace {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// given - All input details
		// when - Submit the API, http method & resources
		// then - Validate the response
		 System.out.println("Add place Started...");
		 
		RestAssured.baseURI = "https://rahulshettyacademy.com";
		String requestResponse = given().log().all().queryParam("key", "qaclick123")
		.header("Content-Type", "application/json")
		.body(payloadData.uploadBody())
		.when().post("/maps/api/place/add/json")
		.then().log().all().statusCode(200)
		.body("scope", equalTo("APP"))
		.header("Server", "Apache/2.4.52 (Ubuntu)")
		.extract().response().asString();
		
		System.out.println("Response : "+requestResponse);
		JsonPath json = new JsonPath(requestResponse);
		String placeId = json.getString("place_id");
		System.out.println("Place ID : "+placeId);
		
		 System.out.println("Add place Finished...");
		 
		 System.out.println("************************************************************");
		 
		 System.out.println("Update place started...");
		 String newAddress = "70 winter walk, WSR";
		 given().log().all()
		 .queryParam("key","qaclick123")
		 .queryParam("place_id",placeId)
		 .header("Content-Type","application/json")
		 .body("{\r\n"
		 		+ "\"place_id\":\""+placeId+"\",\r\n"
		 		+ "\"address\":\""+newAddress+"\",\r\n"
		 		+ "\"key\":\"qaclick123\"\r\n"
		 		+ "}")
		 .when().put("/maps/api/place/update/json")
		 .then().statusCode(200)
		 .body("msg", equalTo("Address successfully updated"));
		 
		 System.out.println("Update place finished...");
		 

		 System.out.println("************************************************************");
		 
		 System.out.println("Get place started...");
		 String getPlaceresponse = given().log().all()
		 .queryParam("key","qaclick123")
		 .queryParam("place_id",placeId)
		 .when().get("/maps/api/place/get/json")
		 .then().log().all()
		 .statusCode(200)
		 .extract().response().asString();
		 
		 JsonPath jsonGetPlace = reUsableMethods.rawtoJson(getPlaceresponse);
		 String actualAddress = jsonGetPlace.getString("address");
		 Assert.assertEquals(actualAddress,newAddress);
		 
		 System.out.println("Get place finished...");
		 

	}

}
